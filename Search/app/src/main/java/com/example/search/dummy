package com.mycompany.ebayapp;

import android.content.Context;
import android.content.SharedPreferences;
import android.support.v7.widget.RecyclerView;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ImageView;
import android.widget.TextView;
import android.widget.Toast;

import com.squareup.picasso.Picasso;

import org.json.JSONArray;
import org.json.JSONException;
import org.json.JSONObject;

import java.util.ArrayList;

public class CardAdapter extends RecyclerView.Adapter<CardAdapter.ViewHolder> {

    ArrayList<ItemData> mValues;
    Context mContext;
    private ItemClickListener mListener;

    public CardAdapter(Context context, ArrayList<ItemData> values) {
        mValues = values;
        mContext = context;
    }

    public class ViewHolder extends RecyclerView.ViewHolder {

        public TextView textView,zipView,shipView,condView,priceView;
        public ImageView imgView,wishView;

        public ViewHolder(View v) {
            super(v);
            textView = v.findViewById(R.id.itemtitle);
            zipView = v.findViewById(R.id.itemzip);
            shipView = v.findViewById(R.id.itemship);
            condView = v.findViewById(R.id.itemcondition);
            imgView = v.findViewById(R.id.itemimage);
            priceView = v.findViewById(R.id.itemprice);
            wishView = v.findViewById(R.id.itemwish);

            wishView.setOnClickListener(view -> {
                //Add to WL
                String title = mValues.get(getAdapterPosition()).title;
//                Toast.makeText(mContext,title + " was added to wishList", Toast.LENGTH_SHORT).show();
                SharedPreferences sharedPreferences = mContext.getSharedPreferences("WishList",Context.MODE_PRIVATE);
                SharedPreferences.Editor editor = sharedPreferences.edit();
                String temp = sharedPreferences.getString("Wishlist",null);
                try {
                    JSONObject jsonobj =(temp!=null)?new JSONObject(temp):new JSONObject();
//                    System.out.println(mValues.get());
                    jsonobj.put("all_items", new JSONArray(mValues.get(getAdapterPosition()).getItemJSON()));
                    System.out.println(jsonobj.toString());
                    editor.putString("WishList",jsonobj.toString());
                    editor.apply();
                    Toast.makeText(mContext, jsonobj.toString(), Toast.LENGTH_SHORT).show();
                    String s = sharedPreferences.getString("WishList",null);
                    JSONObject j = new JSONObject(s);
//                    System.out.println(j);
                }catch (JSONException e){
                    Log.e("Error: ","e",e);
                }
            });
            v.setOnClickListener(view -> mListener.onItemClick(view,getAdapterPosition()));
        }
    }

    @Override
    public CardAdapter.ViewHolder onCreateViewHolder(ViewGroup parent, int viewType) {
        View view = LayoutInflater.from(mContext).inflate(R.layout.single_item_recycler, parent, false);
        return new ViewHolder(view);
    }

    @Override
    public void onBindViewHolder(ViewHolder Vholder, int position) {
        if(!mValues.get(position).imageURL.equals("N/A"))
            Picasso.with(mContext).load(mValues.get(position).imageURL).into(Vholder.imgView);
        String title = mValues.get(position).title;
        if(title.length()>35) {
            title = title.substring(0, 36).toUpperCase();
            title = title.substring(0, title.lastIndexOf(" ")) + "...";
        }
        Vholder.textView.setText(title);
        Vholder.zipView.setText("Zip: "+mValues.get(position).zipcode);
        if(mValues.get(position).shippingType.contains("Free") || mValues.get(position).shippingType.contains("N/A"))
            Vholder.shipView.setText(mValues.get(position).shippingType);
        else
            Vholder.shipView.setText("$"+mValues.get(position).shippingType);
        String cond = mValues.get(position).conditionType;
//        int idx = cond.lastIndexOf(" ");
//        cond = (idx!=-1)?cond.substring(idx+1,idx+2).toUpperCase() + cond.substring(idx+2):cond;
        Vholder.condView.setText(cond);
        Vholder.priceView.setText("$"+mValues.get(position).price);
    }

    @Override
    public int getItemCount() {
        return mValues.size();
    }

    public void setClickListener(ItemClickListener itemClickListener){
        this.mListener = itemClickListener;
    }
}
