<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="65dp"
        android:layout_height="45dp"

        android:background="@drawable/ic_price_tag">

    </ImageView>

        <TextView
            android:id="@+id/currentBid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:textColor="#ffffff"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
            android:textSize="13dp" />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ronaldo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/ItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:text="Ronaldo Jersey"
        android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp" />
    <View style="@style/Divider.Horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp">


        <TextView
            android:id="@+id/bidby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:textColor="#000000"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/timeleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/bidby"
            android:gravity="right"
            android:textColor="#000000"
            android:text="1h 36m"
            android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
            android:textSize="17dp" />


    </RelativeLayout>
    <View style="@style/Divider.Horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <EditText
        android:id="@+id/user_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="@string/user_name"
        android:textAlignment="center"
        android:inputType="text" />
    <EditText
        android:id="@+id/newBid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/bid_hint"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="number"
        android:textAlignment="center"

        android:layout_margin="10dp"/>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:onClick="sendData"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"
        android:text="@string/button_name"
        android:visibility="visible" />




</LinearLayout>
